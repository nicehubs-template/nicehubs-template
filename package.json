{
  "name": "nicehubs-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --mode development",
    "dev:stag": "vite --mode staging",
    "dev:prod": "vite --mode production",
    "build:dev": "vite build --mode development",
    "build:stag": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "ts:lint": "vue-tsc --noEmit --skipLibCheck",
    "lint": "eslint src --ext .ts,.tsx,.vue,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.vue,.js,.jsx",
    "prettier": "prettier --write src",
    "style": "stylelint 'src/**/*.{css,less}'",
    "style:fix": "stylelint --fix 'src/**/*.{css,less}'",
    "prepare": "husky install",
    "test": "vitest"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "element-plus": "^2.1.7",
    "pinia": "^2.0.11",
    "vue": "^3.2.25",
    "vue-i18n": "^9.0.0",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vitejs/plugin-vue": "^2.2.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.12",
    "prettier": "^2.5.1",
    "sass": "^1.49.10",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.6.8",
    "unplugin-vue-components": "^0.18.5",
    "vite": "^2.8.0",
    "vitest": "^0.8.1",
    "vue-tsc": "^0.32.1"
  },
  "lint-staged": {
    "*.{less,css}": [
      "pnpm style:fix"
    ],
    "**/*.{ts,tsx,vue,js,jsx}": [
      "pnpm lint:fix",
      "pnpm prettier"
    ]
  }
}
